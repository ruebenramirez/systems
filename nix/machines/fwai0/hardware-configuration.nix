    { device = "zroot/safe/home";
      fsType = "zfs";
    };
  fileSystems."/persist" =
    { device = "zroot/safe/persist";
      fsType = "zfs";
    };
  swapDevices =
    [ { device = "/dev/disk/by-uuid/6af9a960-1c07-4fe8-8f3d-f8cf6a6ed78b"; }
