    "amd_iommu=off"
    "amdgpu.gttsize=126976"
    "ttm.pages_limit=32505856"
    "ttm.page_pool_size=32505856"
    "amdgpu.sg_display=0"
  ];

  fileSystems."/" =
    { device = "zroot/local/root";
      fsType = "zfs";
    };
